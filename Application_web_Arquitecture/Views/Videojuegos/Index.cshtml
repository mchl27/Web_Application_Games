@model IEnumerable<Application_web_Arquitecture.Models.Videojuego>

@{
    ViewData["Title"] = "Gestión de Videojuegos";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Gestión de Videojuegos</h1>
        <p>Administra y visualiza la lista de videojuegos disponibles en nuestra tienda.</p>
        <a asp-action="Create" class="btn btn-success mb-3">Crear Nuevo Videojuego</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                    <th>@Html.DisplayNameFor(model => model.Genero)</th>
                    <th>@Html.DisplayNameFor(model => model.Precio)</th>
                    <th>@Html.DisplayNameFor(model => model.Disponibilidad)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Genero)</td>
                        <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                        <td>@Html.DisplayFor(modelItem => item.Disponibilidad)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdJuego" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.IdJuego" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.IdJuego" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>